@model PoliziaMunicipale.Models.Verbale

@{
    ViewData["Title"] = "Modifica Verbale";
}

<div class="container my-4">
    <h2 class="text-center">Modifica Verbale</h2>

    <form asp-action="Edit" class="mt-3">
        <div class="mb-3">
            <label asp-for="DataViolazione" class="form-label"></label>
            <input asp-for="DataViolazione" class="form-control" type="date" />
            <span asp-validation-for="DataViolazione" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="IndirizzoViolazione" class="form-label"></label>
            <input asp-for="IndirizzoViolazione" class="form-control" />
            <span asp-validation-for="IndirizzoViolazione" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NominativoAgente" class="form-label"></label>
            <input asp-for="NominativoAgente" class="form-control" />
            <span asp-validation-for="NominativoAgente" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DataTrascrizioneVerbale" class="form-label"></label>
            <input asp-for="DataTrascrizioneVerbale" class="form-control" type="date" />
            <span asp-validation-for="DataTrascrizioneVerbale" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Importo" class="form-label"></label>
            <input asp-for="Importo" class="form-control" />
            <span asp-validation-for="Importo" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DecurtamentoPunti" class="form-label"></label>
            <input asp-for="DecurtamentoPunti" class="form-control" />
            <span asp-validation-for="DecurtamentoPunti" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AnagraficaId" class="form-label"></label>
            <input asp-for="AnagraficaId" class="form-control" />
            <span asp-validation-for="AnagraficaId" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Torna alla lista</a>
            <button type="submit" class="btn btn-primary"><i class="bi bi-check-circle"></i> Salva</button>
        </div>
    </form>
</div>
