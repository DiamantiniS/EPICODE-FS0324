@model IEnumerable<(string Nome, string Cognome, int PuntiDecurtati)>

@{
    ViewData["Title"] = "Punti Decurtati Trasgressori";
}

<h2>Punti Decurtati Trasgressori</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Punti Decurtati</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Cognome</td>
                <td>@item.PuntiDecurtati</td>
            </tr>
        }
    </tbody>
</table>
