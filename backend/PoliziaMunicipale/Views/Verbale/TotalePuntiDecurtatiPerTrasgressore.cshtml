@model IEnumerable<(string Cognome, string Nome, int TotalePunti)>

@{
    ViewData["Title"] = "Totale Punti Decurtati per Trasgressore";
}

<h2>Totale Punti Decurtati per Trasgressore</h2>

<table class="table">
    <thead>
        <tr>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Totale Punti Decurtati</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Cognome</td>
                <td>@item.Nome</td>
                <td>@item.TotalePunti</td>
            </tr>
        }
    </tbody>
</table>
