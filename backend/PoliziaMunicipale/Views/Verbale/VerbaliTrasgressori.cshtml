@model IEnumerable<(string Nome, string Cognome, decimal Importo, DateTime DataViolazione, int DecurtamentoPunti)>

@{
    ViewData["Title"] = "Verbali Trasgressori";
}

<h2>Verbali Trasgressori</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Importo</th>
            <th>Data Violazione</th>
            <th>Punti Decurtati</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Cognome</td>
                <td>@item.Importo</td>
                <td>@item.DataViolazione.ToShortDateString()</td>
                <td>@item.DecurtamentoPunti</td>
            </tr>
        }
    </tbody>
</table>
