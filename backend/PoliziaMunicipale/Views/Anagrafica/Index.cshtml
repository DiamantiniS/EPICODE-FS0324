@model IEnumerable<PoliziaMunicipale.Models.Anagrafica>

@{
    ViewData["Title"] = "Elenco Trasgressori";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Nuova Anagrafica</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Indirizzo</th>
            <th>Città</th>
            <th>CAP</th>
            <th>Codice Fiscale</th>
            <th>Azione</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var anagrafica in Model)
        {
            <tr>
                <td>@anagrafica.Cognome</td>
                <td>@anagrafica.Nome</td>
                <td>@anagrafica.Indirizzo</td>
                <td>@anagrafica.Citta</td>
                <td>@anagrafica.CAP</td>
                <td>@anagrafica.Cod_Fisc</td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@anagrafica.Id">Modifica</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@anagrafica.Id">Dettagli</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@anagrafica.Id">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
