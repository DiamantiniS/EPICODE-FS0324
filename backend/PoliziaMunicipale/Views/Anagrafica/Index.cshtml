@model IEnumerable<PoliziaMunicipale.Models.Anagrafica>

<div class="container my-4">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus-circle"></i> Nuova Anagrafica</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Cognome</th>
                        <th>Nome</th>
                        <th>Indirizzo</th>
                        <th>Città</th>
                        <th>CAP</th>
                        <th>Codice Fiscale</th>
                        <th>Azione</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var anagrafica in Model)
                    {
                        <tr>
                            <td>@anagrafica.Cognome</td>
                            <td>@anagrafica.Nome</td>
                            <td>@anagrafica.Indirizzo</td>
                            <td>@anagrafica.Citta</td>
                            <td>@anagrafica.CAP</td>
                            <td>@anagrafica.Cod_Fisc</td>
                            <td>
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@anagrafica.Id"><i class="bi bi-pencil"></i> Modifica</a>
                                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@anagrafica.Id"><i class="bi bi-eye"></i> Dettagli</a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@anagrafica.Id"><i class="bi bi-trash"></i> Elimina</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
