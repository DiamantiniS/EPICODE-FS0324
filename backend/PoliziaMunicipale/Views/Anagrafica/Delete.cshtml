@model PoliziaMunicipale.Models.Anagrafica

@{
    ViewData["Title"] = "Elimina Anagrafica";
}

<h2>Elimina Anagrafica</h2>

<h3>Sei sicuro di voler eliminare questa anagrafica?</h3>
<div>
    <h4>Anagrafica</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            Cognome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cognome)
        </dd>
        <dt class="col-sm-2">
            Indirizzo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Indirizzo)
        </dd>
        <dt class="col-sm-2">
            Città
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Citta)
        </dd>
        <dt class="col-sm-2">
            CAP
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CAP)
        </dd>
        <dt class="col-sm-2">
            Codice Fiscale
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cod_Fisc)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Elimina" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Annulla</a>
    </form>
</div>
