@model PoliziaMunicipale.Models.Anagrafica

@{
    ViewData["Title"] = "Elimina Anagrafica";
}

<div class="container my-4">
    <h2 class="text-center">Elimina Anagrafica</h2>

    <h3 class="text-center">Sei sicuro di voler eliminare questa anagrafica?</h3>
    <div class="card mt-4 shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    Nome
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-2">
                    Cognome
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Cognome)
                </dd>
                <dt class="col-sm-2">
                    Indirizzo
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Indirizzo)
                </dd>
                <dt class="col-sm-2">
                    Città
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Citta)
                </dd>
                <dt class="col-sm-2">
                    CAP
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CAP)
                </dd>
                <dt class="col-sm-2">
                    Codice Fiscale
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Cod_Fisc)
                </dd>
            </dl>

            <form asp-action="Delete" method="post" class="d-flex justify-content-between">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Elimina</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Annulla</a>
            </form>
        </div>
    </div>
</div>
