<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-light fixed-top">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Gestionale Hotel</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Clienti" asp-action="Index">Anagrafica Cliente</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Camere" asp-action="Index">Tipologia Camere</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Servizi" asp-action="Index">Servizi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Prenotazioni" asp-action="Index">Prenotazioni</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Ricerca" asp-action="Index">Ricerca</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout (@User.Identity.Name)</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <div class="sidebar-nav">
        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            <a asp-controller="Clienti" asp-action="Index">Anagrafica Cliente</a>
            <a asp-controller="Camere" asp-action="Index">Tipologia Camere</a>
            <a asp-controller="Servizi" asp-action="Index">Servizi</a>
            <a asp-controller="Prenotazioni" asp-action="Index">Prenotazioni</a>
            <a asp-controller="Ricerca" asp-action="Index">Ricerca</a>
        }
    </div>
    <div class="container main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
