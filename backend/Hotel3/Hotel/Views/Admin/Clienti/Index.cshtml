@model IEnumerable<Hotel.Models.Cliente>
@{
    ViewData["Title"] = "Anagrafica Clienti";
}

<h2>Anagrafica Clienti</h2>

<p>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
        <i class="bi bi-plus"></i> Crea nuovo cliente
    </button>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Codice Fiscale</th>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Cellulare</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CodiceFiscale</td>
                <td>@item.Nome</td>
                <td>@item.Cognome</td>
                <td>@item.Cellulare</td>
                <td>
                    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#detailsModal" data-id="@item.Id">
                        <i class="bi bi-eye"></i>
                    </button>
                    <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#editModal" data-id="@item.Id">
                        <i class="bi bi-gear"></i>
                    </button>
                    <button type="button" class="btn btn-danger" onclick="confirmDelete(@item.Id)">
                        <i class="bi bi-trash"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @Html.Partial("~/Views/Admin/Clienti/_CreatePartial.cshtml", new Hotel.Models.Cliente())
        </div>
    </div>
</div>

<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="detailsModalBody">
            <!-- Details will be loaded here via AJAX -->
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="editModalBody">
            <!-- Edit form will be loaded here via AJAX -->
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#detailsModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');

                $.get('@Url.Action("Details", "Clienti")', { id: id }, function (data) {
                    $('#detailsModalBody').html(data);
                });
            });

            $('#editModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');

                $.get('@Url.Action("Edit", "Clienti")', { id: id }, function (data) {
                    $('#editModalBody').html(data);
                });
            });

            $('#createForm').submit(function (event) {
                event.preventDefault();
                var form = $(this);
                $.post(form.attr('action'), form.serialize(), function (data) {
                    location.reload();
                });
            });

            $('#editForm').submit(function (event) {
                event.preventDefault();
                var form = $(this);
                $.post(form.attr('action'), form.serialize(), function (data) {
                    location.reload();
                });
            });
        });

        function confirmDelete(id) {
            if (confirm("Sei sicuro di voler eliminare questo cliente?")) {
                $.ajax({
                    url: '@Url.Action("Delete", "Clienti")',
                    type: 'POST',
                    data: { id: id },
                    success: function (result) {
                        if (result.success) {
                            alert("Cliente eliminato con successo.");
                            location.reload();
                        } else {
                            alert("Errore durante l'eliminazione del cliente: " + result.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        alert("Errore durante l'eliminazione del cliente.");
                    }
                });
            }
        }
    </script>
}
