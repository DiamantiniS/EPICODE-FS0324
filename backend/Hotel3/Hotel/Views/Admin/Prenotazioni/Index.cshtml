@model IEnumerable<Hotel.Models.Prenotazione>
@{
    ViewData["Title"] = "Prenotazioni";
}

<h2>Prenotazioni</h2>

<p>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
        <i class="bi bi-plus"></i> Crea nuova prenotazione
    </button>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Camera</th>
            <th>Data Prenotazione</th>
            <th>Dal</th>
            <th>Al</th>
            <th>Tipologia Soggiorno</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Cliente.Cognome @item.Cliente.Nome</td>
                <td>@item.Camera.Descrizione</td>
                <td>@item.DataPrenotazione.ToShortDateString()</td>
                <td>@item.Dal.ToShortDateString()</td>
                <td>@item.Al.ToShortDateString()</td>
                <td>@item.TipologiaSoggiorno</td>
                <td>
                    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#detailsModal" data-id="@item.Id">
                        <i class="bi bi-eye"></i>
                    </button>
                    <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#editModal" data-id="@item.Id">
                        <i class="bi bi-gear"></i>
                    </button>
                    <button type="button" class="btn btn-danger" onclick="confirmDelete(@item.Id)">
                        <i class="bi bi-trash"></i>
                    </button>
                    <a asp-action="Checkout" asp-route-id="@item.Id" class="btn btn-success">Check-out</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @Html.Partial("~/Views/Admin/Prenotazioni/_CreatePartial.cshtml", new Hotel.Models.Prenotazione())
        </div>
    </div>
</div>

<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="detailsModalBody">
            <!-- Details will be loaded here via AJAX -->
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="editModalBody">
            <!-- Edit form will be loaded here via AJAX -->
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#detailsModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');

                $.get('@Url.Action("Details", "Prenotazioni")', { id: id }, function (data) {
                    $('#detailsModalBody').html(data);
                });
            });

            $('#editModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var id = button.data('id');

                $.get('@Url.Action("Edit", "Prenotazioni")', { id: id }, function (data) {
                    $('#editModalBody').html(data);
                });
            });

            $('#createForm').submit(function (event) {
                event.preventDefault();
                var form = $(this);
                $.post(form.attr('action'), form.serialize(), function (data) {
                    location.reload();
                });
            });

            $('#editForm').submit(function (event) {
                event.preventDefault();
                var form = $(this);
                $.post(form.attr('action'), form.serialize(), function (data) {
                    location.reload();
                });
            });
        });

        function confirmDelete(id) {
            if (confirm("Sei sicuro di voler eliminare questa prenotazione?")) {
                $.ajax({
                    url: '@Url.Action("Delete", "Prenotazioni")',
                    type: 'POST',
                    data: { id: id },
                    success: function (result) {
                        if (result.success) {
                            alert("Prenotazione eliminata con successo.");
                            location.reload();
                        } else {
                            alert("Errore durante l'eliminazione della prenotazione: " + result.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        alert("Errore durante l'eliminazione della prenotazione.");
                    }
                });
            }
        }
    </script>
}
