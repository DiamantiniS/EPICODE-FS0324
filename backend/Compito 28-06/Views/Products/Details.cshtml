@model DiamaGyms.Models.Product

@{
    ViewData["Title"] = Model.Name;
}

<h1 class="my-4">@Model.Name</h1>

<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            <img id="mainImage" src="@ViewBag.CoverImageUrl" class="img-fluid rounded" alt="@Model.Name">
        </div>
        <div class="d-flex">
            <img src="@ViewBag.CoverImageUrl" class="img-thumbnail me-2 small-img" alt="Cover image" onclick="changeImage('@ViewBag.CoverImageUrl')">
            <img src="@ViewBag.AdditionalImageUrl" class="img-thumbnail small-img" alt="Additional image" onclick="changeImage('@ViewBag.AdditionalImageUrl')">
        </div>
    </div>
    <div class="col-md-6">
        <h3 class="text-primary">@Model.Price.ToString("C")</h3>
        <p class="text-muted">@Model.Description</p>
        <a href="#" class="btn btn-secondary btn-block no-hover">Add to Cart</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function changeImage(url) {
            document.getElementById('mainImage').src = url;
        }
    </script>
}

<style>
    .small-img {
        width: 80px; 
        height: auto; 
        cursor: pointer; 
    }
</style>
