@model DiamaGyms.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<h1 class="my-4">Create Product</h1>

<div>
    <div class="card-body">
        <form asp-action="Create">
            <div class="form-group mt-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter product name" style="box-shadow: none;" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" placeholder="Enter price" style="box-shadow: none;" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter product description" style="box-shadow: none;"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="CoverImageUrl" class="control-label">Cover Image URL</label>
                <input asp-for="CoverImageUrl" class="form-control" placeholder="Enter cover image URL" style="box-shadow: none;" />
                <span asp-validation-for="CoverImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="AdditionalImageUrl" class="control-label">Additional Image URL</label>
                <input asp-for="AdditionalImageUrl" class="form-control" placeholder="Enter additional image URL" style="box-shadow: none;" />
                <span asp-validation-for="AdditionalImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary btn-block" />
                <a asp-action="Index" class="btn btn-secondary btn-block">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
