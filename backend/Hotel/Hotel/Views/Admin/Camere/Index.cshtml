@model IEnumerable<ProgettoS6GestionaleHotelSabrinaCinque.Models.Camera>

@{
    ViewData["Title"] = "Tipologia Camere";
}

<h2>Tipologia Camere</h2>

<p>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createCameraModal">Crea nuova camera</button>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Descrizione)</th>
            <th>@Html.DisplayNameFor(model => model.Tipologia)</th>
            <th>@Html.DisplayNameFor(model => model.Prezzo)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Descrizione)</td>
                <td>@Html.DisplayFor(modelItem => item.Tipologia)</td>
                <td>@Html.DisplayFor(modelItem => item.Prezzo)</td>
                <td>
                    <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#editCameraModal" data-id="@item.Id" data-descrizione="@item.Descrizione" data-tipologia="@item.Tipologia" data-prezzo="@item.Prezzo">Modifica</button>
                    <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#detailsCameraModal" data-id="@item.Id" data-descrizione="@item.Descrizione" data-tipologia="@item.Tipologia" data-prezzo="@item.Prezzo">Dettagli</button>
                    <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteCameraModal" data-id="@item.Id">Elimina</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Create Camera Modal -->
<div class="modal fade" id="createCameraModal" tabindex="-1" aria-labelledby="createCameraModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createCameraModalLabel">Crea Camera</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Create">
                    <div class="mb-3">
                        <label asp-for="Descrizione" class="form-label"></label>
                        <input asp-for="Descrizione" class="form-control" />
                        <span asp-validation-for="Descrizione" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Tipologia" class="form-label"></label>
                        <input asp-for="Tipologia" class="form-control" />
                        <span asp-validation-for="Tipologia" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Prezzo" class="form-label"></label>
                        <input asp-for="Prezzo" class="form-control" />
                        <span asp-validation-for="Prezzo" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
                        <button type="submit" class="btn btn-primary">Salva</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Camera Modal -->
<div class="modal fade" id="editCameraModal" tabindex="-1" aria-labelledby="editCameraModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editCameraModalLabel">Modifica Camera</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Edit">
                    <input type="hidden" id="editId" name="Id" />
                    <div class="mb-3">
                        <label asp-for="Descrizione" class="form-label"></label>
                        <input asp-for="Descrizione" class="form-control" id="editDescrizione" />
                        <span asp-validation-for="Descrizione" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Tipologia" class="form-label"></label>
                        <input asp-for="Tipologia" class="form-control" id="editTipologia" />
                        <span asp-validation-for="Tipologia" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Prezzo" class="form-label"></label>
                        <input asp-for="Prezzo" class="form-control" id="editPrezzo" />
                        <span asp-validation-for="Prezzo" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
                        <button type="submit" class="btn btn-primary">Salva</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Details Camera Modal -->
<div class="modal fade" id="detailsCameraModal" tabindex="-1" aria-labelledby="detailsCameraModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsCameraModalLabel">Dettagli Camera</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Descrizione</label>
                    <input type="text" class="form-control" id="detailsDescrizione" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">Tipologia</label>
                    <input type="text" class="form-control" id="detailsTipologia" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">Prezzo</label>
                    <input type="text" class="form-control" id="detailsPrezzo" readonly />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Camera Modal -->
<div class="modal fade" id="deleteCameraModal" tabindex="-1" aria-labelledby="deleteCameraModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteCameraModalLabel">Elimina Camera</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Sei sicuro di voler eliminare questa camera?</p>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete">
                    <input type="hidden" id="deleteId" name="Id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
                    <button type="submit" class="btn btn-danger">Elimina</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var editCameraModal = document.getElementById('editCameraModal');
        editCameraModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var descrizione = button.getAttribute('data-descrizione');
            var tipologia = button.getAttribute('data-tipologia');
            var prezzo = button.getAttribute('data-prezzo');

            var modalIdInput = editCameraModal.querySelector('#editId');
            var modalDescrizioneInput = editCameraModal.querySelector('#editDescrizione');
            var modalTipologiaInput = editCameraModal.querySelector('#editTipologia');
            var modalPrezzoInput = editCameraModal.querySelector('#editPrezzo');

            modalIdInput.value = id;
            modalDescrizioneInput.value = descrizione;
            modalTipologiaInput.value = tipologia;
            modalPrezzoInput.value = prezzo;
        });

        var detailsCameraModal = document.getElementById('detailsCameraModal');
        detailsCameraModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var descrizione = button.getAttribute('data-descrizione');
            var tipologia = button.getAttribute('data-tipologia');
            var prezzo = button.getAttribute('data-prezzo');

            var modalDescrizioneInput = detailsCameraModal.querySelector('#detailsDescrizione');
            var modalTipologiaInput = detailsCameraModal.querySelector('#detailsTipologia');
            var modalPrezzoInput = detailsCameraModal.querySelector('#detailsPrezzo');

            modalDescrizioneInput.value = descrizione;
            modalTipologiaInput.value = tipologia;
            modalPrezzoInput.value = prezzo;
        });

        var deleteCameraModal = document.getElementById('deleteCameraModal');
        deleteCameraModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');

            var modalIdInput = deleteCameraModal.querySelector('#deleteId');
            modalIdInput.value = id;
        });
    </script>
}