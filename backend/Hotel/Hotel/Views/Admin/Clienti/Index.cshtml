@model IEnumerable<Hotel.Models.Cliente>

@{
    ViewData["Title"] = "Anagrafica Cliente";
}

<h2>Anagrafica Cliente</h2>

<p>
    <button class="btn btn-primary" data-toggle="modal" data-target="#createClienteModal">Crea nuovo cliente</button>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.CodiceFiscale)</th>
            <th>@Html.DisplayNameFor(model => model.Cognome)</th>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Indirizzo)</th>
            <th>@Html.DisplayNameFor(model => model.Telefono)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CodiceFiscale)</td>
                <td>@Html.DisplayFor(modelItem => item.Cognome)</td>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Indirizzo)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    <button class="btn btn-warning" data-toggle="modal" data-target="#editClienteModal-@item.CodiceFiscale">Modifica</button>
                    <button class="btn btn-info" data-toggle="modal" data-target="#detailsClienteModal-@item.CodiceFiscale">Dettagli</button>
                    <button class="btn btn-danger" data-toggle="modal" data-target="#deleteClienteModal-@item.CodiceFiscale">Elimina</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@foreach (var item in Model)
{
    <!-- Modale Modifica Cliente -->
    <div class="modal fade" id="editClienteModal-@item.CodiceFiscale" tabindex="-1" role="dialog" aria-labelledby="editClienteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editClienteModalLabel">Modifica Cliente</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-action="Edit" method="post">
                        <div class="form-group">
                            <label asp-for="CodiceFiscale" class="control-label"></label>
                            <input asp-for="CodiceFiscale" class="form-control" readonly />
                        </div>
                        <div class="form-group">
                            <label asp-for="Cognome" class="control-label"></label>
                            <input asp-for="Cognome" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Indirizzo" class="control-label"></label>
                            <input asp-for="Indirizzo" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Telefono" class="control-label"></label>
                            <input asp-for="Telefono" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Salva" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modale Dettagli Cliente -->
    <div class="modal fade" id="detailsClienteModal-@item.CodiceFiscale" tabindex="-1" role="dialog" aria-labelledby="detailsClienteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="detailsClienteModalLabel">Dettagli Cliente</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="CodiceFiscale" class="control-label"></label>
                        <input asp-for="CodiceFiscale" class="form-control" readonly value="@item.CodiceFiscale" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Cognome" class="control-label"></label>
                        <input asp-for="Cognome" class="form-control" readonly value="@item.Cognome" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" readonly value="@item.Nome" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Indirizzo" class="control-label"></label>
                        <input asp-for="Indirizzo" class="form-control" readonly value="@item.Indirizzo" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" readonly value="@item.Telefono" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" readonly value="@item.Email" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modale Elimina Cliente -->
    <div class="modal fade" id="deleteClienteModal-@item.CodiceFiscale" tabindex="-1" role="dialog" aria-labelledby="deleteClienteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteClienteModalLabel">Elimina Cliente</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Sei sicuro di voler eliminare questo cliente?
                </div>
                <div class="modal-footer">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="CodiceFiscale" value="@item.CodiceFiscale" />
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Chiudi</button>
                        <input type="submit" value="Elimina" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<!-- Modale Crea Cliente -->
<div class="modal fade" id="createClienteModal" tabindex="-1" role="dialog" aria-labelledby="createClienteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createClienteModalLabel">Crea Cliente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" method="post">
                    <div class="form-group">
                        <label asp-for="CodiceFiscale" class="control-label"></label>
                        <input asp-for="CodiceFiscale" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Cognome" class="control-label"></label>
                        <input asp-for="Cognome" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Indirizzo" class="control-label"></label>
                        <input asp-for="Indirizzo" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salva" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
